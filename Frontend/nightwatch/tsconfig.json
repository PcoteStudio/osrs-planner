{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "resolveJsonModule": true,
    "target": "ESNext",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "ESNext",
      "dom"
    ],
    "types": [
      "nightwatch"
    ],
    "rootDir": "../",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "../node_modules/@nightwatch/**/*",
    "src/**/*.vue",
    "src/**/*.d.ts",
    "src/**/*.json",
    "../tests/e2e/**/*"
  ],
  "ts-node": {
    "transpileOnly": true
  },
  "files": [
    "nightwatch.d.ts"
  ]
}